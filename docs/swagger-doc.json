{
  "openapi": "3.0.0",
  "info": {
    "title": "Address Book API",
    "description": "A small RESTful for an Address Book",
    "contact": {
      "email": "meetdesmond.edem@gmail.com"
    },
    "license": {
      "name": "MIT License",
      "url": "https://opensource.org/licenses/MIT"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "/"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "summary": "returns the index route",
        "description": "This endpoint display a sucess response with a message welcoming the user to the API.\n",
        "responses": {
          "200": {
            "description": "search results matching criteria"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "required": [
          "email",
          "password"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "example": "d290f1ee-6c54-4b01-90e6-d701748f0852"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "user@email.com"
          },
          "password": {
            "type": "string",
            "example": "123456789"
          }
        }
      }
    }
  }
}